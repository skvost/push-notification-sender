{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
  },
  "compileOnSave": true,
  "exclude": [
    "*/**/__tests__",
  ],
  "include": [
    "src",
    "src/**/*",
    "src/configuration/pnConfig.ts"
  ]
}